<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#F8F8F8 "
    android:layout_margin="5dp">





    <TextView
        android:id="@+id/onet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:text="How To Earn ($)"
        />

    <TextView
        android:id="@+id/dd"
        android:layout_below="@+id/onet"
        android:layout_marginTop="7dp"
        android:text="@string/earntext"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <RelativeLayout
        android:id="@+id/kk"

        android:layout_below="@+id/dd"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/love"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/redlike"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:textSize="30dp"
            android:text="1000"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/love"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="="
            android:textColor="@android:color/black"

            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="1$"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/kk"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/follow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/followmw_icon"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:textSize="30dp"
            android:text="1000"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/follow"
            />

        <TextView
            android:textColor="@android:color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="="
            android:layout_centerHorizontal="true"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="3$"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    </RelativeLayout>

