<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ViewID"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:elevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        app:cardBackgroundColor="#DFF4FF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:visibility="invisible"
                android:id="@+id/ActiveDotID"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_width="15dp"
                android:src="@drawable/active_dot"
                android:layout_height="15dp">
            </ImageView>

           <TextView
               android:id="@+id/onlinetextID"
               android:layout_below="@id/ActiveDotID"
               android:visibility="invisible"
               android:layout_alignParentRight="true"
               android:layout_marginTop="1dp"
               android:layout_marginRight="10dp"
               android:text="Online"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></TextView>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/SprfileImageID"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/default_profileimage"
                />

            <RelativeLayout
                android:layout_toRightOf="@+id/SprfileImageID"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/UsernameIDID"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/SnameID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/UsernameIDID"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/SdetailsID"
                    android:layout_below="@+id/SnameID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="country"
                    android:layout_marginTop="3dp"
                    android:textSize="14dp"
                    android:textStyle="italic"
                    />


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>