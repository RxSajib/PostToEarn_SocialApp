<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ChatLogoID"
            android:layout_width="100dp"
            android:src="@drawable/chatlogo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp">
        </ImageView>

        <TextView
            android:id="@+id/ChatTextID"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:text="No Friends Found"
            android:layout_below="@id/ChatLogoID"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/FriendListID"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>


        <SearchView
            android:id="@+id/ScarchViewID"
            android:layout_width="match_parent"
            android:queryHint="Search By Name"
            android:layout_height="wrap_content">

        </SearchView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/ScarchViewID"
            android:id="@+id/AllcontactID"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>

</FrameLayout>